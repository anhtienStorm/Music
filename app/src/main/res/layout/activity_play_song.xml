<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaySong">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/seekBarPlay"
         />

    <SeekBar
        android:id="@+id/seekBarPlay"
        android:layout_width="350dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/tvTimeLive"
        app:layout_constraintRight_toLeftOf="@+id/tvTotalTime"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/btPlay"
         />



    <TextView
        android:id="@+id/tvTimeLive"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/seekBarPlay"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/btPlay" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="TotalTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seekBarPlay"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/btPlay"
        />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_play_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/btPrevious"
        app:layout_constraintRight_toLeftOf="@+id/btNext"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_skip_next_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/btPlay"
        app:layout_constraintRight_toLeftOf="@+id/btRandom"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btPrevious"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_skip_previous_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/btLoop"
        app:layout_constraintRight_toLeftOf="@+id/btPlay"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPlay"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btLoop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Loop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btPrevious"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPlay"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btRandom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Random"
        app:layout_constraintLeft_toRightOf="@+id/btNext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPlay"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>